{
   "manifest_version": 3,
   "name": "Washington Law Extension",
   "version": "5.1",
   "description": "Indents and highlights Washington RCWs and WACs with defined term highlighting",
   "permissions": [
      "activeTab",
      "storage"
   ],
   "host_permissions": [
      "*://*.wa.gov/*"
   ],
   "content_scripts": [
      {
         "matches": ["*://*.wa.gov/*"],
         "include_globs": ["*://app?.leg.wa.gov/*"],
         "js": [
            "js/indent.js",
            "js/definitions.js",
            "js/tests.js",
            "js/warningWidget.js",
            "js/main.js"
         ],
         "css": [
            "css/styles.css",
            "css/section.css"
         ],
         "run_at": "document_end"
      }
   ],
   "background": {
      "service_worker": "background scripts/backgroundJs.js"
   },
   "action": {
      "default_icon": "icons/icon19a.png",
      "default_popup": "popup/popup.html",
      "default_title": "Washington Law Extension"
   },
   "update_url": "https://clients2.google.com/service/update2/crx"
}